<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.poesiamonstruosa.activities.MainActivity"
    android:background="@drawable/portada_poesiam">

    <FrameLayout
        android:id="@+id/controls_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/auto_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_play_white_24dp"
            android:background="@drawable/ripple_btn_pink"
            android:elevation="8dp">
        </ImageButton>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/reveal_image"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/muriel_logo"/>

    </FrameLayout>

</FrameLayout>
