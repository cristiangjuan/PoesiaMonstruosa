<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.poesiamonstruosa.activities.MainActivity"
    android:background="@drawable/portada_poesiam">

    <FrameLayout
        android:id="@+id/controls_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/manual_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_book_open_page_variant_white_24dp"
            android:background="@drawable/round_purple_btn">
        </ImageButton>

        <ImageButton
            android:id="@+id/auto_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_play_white_24dp"
            android:background="@drawable/round_purple_btn">
        </ImageButton>

    </FrameLayout>

</FrameLayout>
